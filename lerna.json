{
  "lerna": "3.22.1",
  "loglevel": "verbose",
  "hoist": true,
  "strict": true,
  "useWorkspaces": false,
  "nohoist": [
    "@types/jasmine",
    "@types/mocha",
    "@types/cucumber",
    "@cucumber/create-meta",
    "@cucumber/cucumber",
    "@cucumber/messages",
    "@wdio/*",
    "cucumber",
    "colors",
    "express",
    "jasmine",
    "mocha",
    "protractor",
    "selenium-webdriver",
    "webdriverio"
  ],
  "packages": [
    "documentation/*",
    "examples/*",
    "integration/*",
    "packages/*"
  ],
  "version": "2.33.10",
  "command": {
    "create": {
      "homepage": "https://serenity-js.org",
      "license": "Apache-2.0"
    },
    "publish": {
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "2.x",
      "conventionalCommits": true,
      "createRelease": "github",
      "private": false,
      "exact": true,
      "message": "chore(release): %s\n[ci skip]",
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "./.eslintrc.js",
    "./.esdoc.js",
    "./.esdoc-patches.js",
    "./.mocharc.yml",
    "./.npmignore",
    "./.nvmrc",
    "./.whitesource",
    "./gh-pages.js",
    "./Makefile",
    "**/*.md",
    "**/spec/**",
    "./package.json",
    "./.github/**"
  ]
}
