  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "lib",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
